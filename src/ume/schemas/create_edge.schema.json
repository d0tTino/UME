{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CREATE_EDGE event",
  "description": "Schema for CREATE_EDGE events emitted by UME producers.",
  "version": "1.0.0",
  "type": "object",
  "required": ["event_type", "timestamp", "node_id", "target_node_id", "label"],
  "properties": {
    "event_type": {
      "const": "CREATE_EDGE",
      "description": "Must be the literal string 'CREATE_EDGE'"
    },
    "timestamp": {
      "type": "integer",
      "description": "Unix timestamp when the event occurred"
    },
    "event_id": {
      "type": "string",
      "description": "Unique identifier for this event"
    },
    "source": {
      "type": "string",
      "description": "Originating system of the event"
    },
    "node_id": {
      "type": "string",
      "description": "Source node identifier"
    },
    "target_node_id": {
      "type": "string",
      "description": "Target node identifier"
    },
    "label": {
      "type": "string",
      "description": "Label describing the relationship"
    },
    "payload": {
      "type": "object",
      "description": "Optional edge attributes",
      "default": {}
    }
  }
}
